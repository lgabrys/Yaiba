		"file_types": [{
			"extension": "coffee", 
			"output": "js",
			"icon": "../assets/img/filetypes/coffee.png",
			"category": "script"
		}],

		"options": [
			{
				"name": "bare",
				"display": "Bare",
				"type": "single",
				"default": false
			},
			{
				"name": "literate",
				"display": "Literate",
				"type": "single",
				"default": false
			}
		],

		"commands": ["coffee"],

		"libraries": ["CoffeeScript@1.6.3"]
	},

	// Dust Compiler
	{
		"name": "dust",

		"display": "Dust",

