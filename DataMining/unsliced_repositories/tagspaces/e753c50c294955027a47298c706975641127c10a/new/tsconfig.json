{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "es2022"],
    "jsx": "react-jsx",
    //"strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",

    "noUnusedLocals": false,
    "pretty": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "-/*": ["src/renderer/*"],
      "assets/*": ["assets/*"]
    }
  },
  "include": [
    "src/renderer/**/*.ts",
    "src/renderer/**/*.tsx",
    "extensions/tagspacespro/**/*.ts",
    "extensions/tagspacespro/**/*.tsx"
  ],
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
  // "exclude": [
  //  "node_modules",
  //  "**/node_modules/*",
  //  "extensions",
  //  "cordova",
  //  "web",
  //  "tests"
  //]
}
