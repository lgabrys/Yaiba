{
  "compilerOptions": {
    "target": "esnext",
    "module": "umd",
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "baseUrl": "src",
//    "paths": {
//      "store/*": ["store/*"],
//      "utils/*": ["utils/*"],
//      "components/*": ["components/*"]
//    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "__mocks__", "__tests__"]
}
