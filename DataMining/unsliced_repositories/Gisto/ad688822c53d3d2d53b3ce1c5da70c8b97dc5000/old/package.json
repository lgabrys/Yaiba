{
  "name": "gisto",
  "version": "1.9.31",
  "description": "Gisto is a Cross-platform snippets management desktop application that allows you and/or your team share code snippets fast and easily. Based on GitHub Gists Infrastructure which means you can use all your existing snippets by connecting your GitHub account! Gisto started as an attempt to fulfill the lack of a syntax highlighted and cloud synchronized code snippet solution. You may think of Gisto as Evernote for code.",
  "productName": "Gisto",
  "main": "main.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist release",
    "lint": "eslint src",
    "start:dev": "cross-env NODE_ENV='development' npm run clean && webpack --mode development -w",
    "start:prod": "cross-env NODE_ENV='production' npm run clean && webpack --mode production",
    "electron": "electron ./dist",
    "dev": "concurrently \"npm run start:dev\" \"wait-on dist && npm run electron\"",
    "prod": "concurrently \"npm run start:prod\" \"wait-on dist && npm run electron\"",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "pack:mac": "cross-env NODE_ENV=production npm run start:prod && npx electron-builder build --m --publish=always",
    "pack:win": "cross-env npm run start:prod && npx electron-builder build -w --x64 --ia32 --publish=always",
    "pack:linux": "cross-env NODE_ENV=production npm run start:prod && npx electron-builder build --l --x64 --publish=always",
    "pack:all": "cross-env NODE_ENV=production npm run start:prod && npx electron-builder build -mwl --x64 --publish=always",
    "pack": "npm run start:prod && npx electron-builder build --publish=always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gisto/gisto.git"
  },
  "bugs": {
    "url": "https://github.com/gisto/gisto/issues"
  },
  "homepage": "http://www.gistoapp.com/",
  "keywords": [
    "gisto",
    "gist",
    "code",
    "snippets"
  ],
  "authors": [
    {
      "name": "Maayan Glikser",
      "url": "http://www.glikm.com"
    },
    {
      "name": "Sasha Khamkov",
      "url": "http://www.sanusart.com"
    }
  ],
  "license": "MIT",
  "readmeFilename": "README.md",
  "devDependencies": {
    "ace-builds": "^1.3.3",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "devtron": "^1.4.0",
    "electron": "^2.0.2",
    "electron-builder": "^20.15.1",
    "electron-debug": "^2.0.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-log": "^2.2.15",
    "electron-publisher-s3": "^20.15.0",
    "electron-reload": "^1.2.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-webpack": "^0.10.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.8.2",
    "file-loader": "^1.1.11",
    "google-fonts-webpack-plugin": "^0.4.4",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.1.0",
    "mimic": "^2.0.6",
    "prop-types": "^15.6.1",
    "react-hot-loader": "^4.2.0",
    "react-test-renderer": "^16.4.1",
    "rimraf": "^2.6.2",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {
    "color": "^3.0.0",
    "electron-updater": "^2.21.10",
    "lodash": "^4.17.10",
    "mousetrap": "^1.6.2",
    "normalize.css": "^8.0.0",
    "react": "^16.3.2",
    "react-ace": "^6.1.1",
    "react-dom": "^16.3.2",
    "react-emotion": "^9.1.3",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "redux": "^4.0.0",
    "reselect": "^3.0.1",
    "styled-components": "^3.2.6",
    "superagent": "^3.8.3",
    "wait-on": "^2.1.0"
  },
  "jest": {
    "modulePaths": [
      "/src",
      "<rootDir>"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "setupFiles": [
      "./jest-setup.js",
      "./__mocks__/localStorage.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "identity-obj-proxy"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js}",
      "!**/node_modules/**",
      "!**/build/**",
      "!**/dist/**"
    ],
    "coverageReporters": [
      "lcov"
    ]
  }
}
